@model IEnumerable<Crud.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "_Layout";
}

<div class="container">
    <div class="col-md-8 offset-md-2">
        <h2 class="text-center">Blog Index</h2>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>
                        Email
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Blog Text
                    </th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.blogText)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.id"><button class="btn btn-success btn-sm">Edit</button></a> 
                            <a asp-action="Details" asp-route-id="@item.id"><button class="btn- btn-primary btn-sm">Details</button></a> 
                            <a asp-action="Delete" asp-route-id="@item.id"><button class="btn- btn-danger btn-sm">Delete</button></a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>