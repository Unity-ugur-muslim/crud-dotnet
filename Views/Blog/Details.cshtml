@model Blog

@{
    ViewBag.Title = "Post Detail";
    Layout = "_Layout";
}

<div class="container">
    <div class="col-md-8 offset-md-2">
        <h3 class="text-center">Post Detail</h3>
        <dl class="row">
            <dt class="col-sm-6">
                Email : @Html.DisplayFor(model => model.email)
            </dt>
            <dt class="col-sm-6">
                Category : @Html.DisplayFor(model => model.category)
            </dt>
        </dl>
        <div class="mt-5">
            <p>@Html.DisplayFor(model => model.blogText)</p>
        </div>
    </div>
</div>